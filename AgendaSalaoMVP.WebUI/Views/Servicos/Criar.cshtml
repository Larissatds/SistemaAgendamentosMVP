@model ServicoDTO

<h2>Cadastrar Novo Serviço</h2>

<form asp-action="Criar">

    <div class="form-horizontal">

        <hr />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="NomeServico" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NomeServico" class="form-control" />
                <span asp-validation-for="NomeServico" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ValorServico" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ValorServico" type="text" class="form-control" />
                <span asp-validation-for="ValorServico" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TempoGasto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TempoGasto" type="text" class="form-control" />
                <span asp-validation-for="TempoGasto" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-outline-dark" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var pattern = {
                'placeholder': "----:--",
                'reverse': true
            };

            $("#TempoGasto").mask("0000:00", pattern);
            $('#ValorServico').mask('#.##0,00', { reverse: true });
        });
    </script>
}
